{% extends 'base.html.twig' %}

{% block body %}
    <h1>ValidatorUser</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ validatorUser.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ validatorUser.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ validatorUser.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ validatorUser.phone }}</td>
            </tr>
            <tr>
                <th>Ipad</th>
                <td>{{ validatorUser.ipad }}</td>
            </tr>
            <tr>
                <th>Charge</th>
                <td>{{ validatorUser.charge }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if validatorUser.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('owner_validatoruserlog_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('owner_validatoruserlog_edit', { 'id': validatorUser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
