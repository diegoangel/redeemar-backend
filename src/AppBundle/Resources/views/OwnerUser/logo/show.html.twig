{% extends 'base.html.twig' %}

{% block body %}
    <h1>Logo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logo.id }}</td>
            </tr>
            <tr>
                <th>Companyname</th>
                <td>{{ logo.companyName }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ logo.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('logo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('logo_edit', { 'id': logo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
